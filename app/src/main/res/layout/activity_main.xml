<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
android:background="@color/white">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Age"
    android:textStyle="bold"
    android:textColor="#3c3e3d"
    android:gravity="left"/>

    <EditText
        android:id="@+id/age"
        android:layout_width="259dp"
        android:layout_height="40dp"
        android:drawablePadding="5dp"
        android:hint="Age"
        android:inputType="numberDecimal"
        android:padding="8dp"
        android:layout_marginBottom="20dp"/>

    <TextView
    android:id="@+id/sex"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Sex"
    android:textStyle="bold"
    android:textColor="#3c3e3d"
    android:gravity="left" />

<RadioGroup
    android:id="@+id/groupSex"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:checkedButton="@+id/M"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginBottom="20dp">

    <RadioButton
        android:id="@+id/M"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M"
        android:gravity="center"/>
    <RadioButton
        android:id="@+id/F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F"
        android:gravity="center"/>
</RadioGroup>

<TextView
    android:id="@+id/bp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="BP"
    android:textStyle="bold"
    android:textColor="#3c3e3d"
    android:gravity="left" />

<RadioGroup
    android:id="@+id/groupBP"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:checkedButton="@+id/LowBP"
    android:orientation="horizontal"
    android:layout_marginBottom="20dp">

    <RadioButton
        android:id="@+id/LowBP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOW"/>
    <RadioButton
        android:id="@+id/normalBP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NORMAL"/>
    <RadioButton
        android:id="@+id/HighBP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HIGH"/>
</RadioGroup>

<TextView
    android:id="@+id/cholesterol"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Cholesterol"
    android:textStyle="bold"
    android:textColor="#3c3e3d"
    android:gravity="left" />

<RadioGroup
    android:id="@+id/groupCholesterol"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:checkedButton="@+id/NormalC"
    android:orientation="horizontal"
    android:layout_marginBottom="20dp">

    <RadioButton
        android:id="@+id/NormalC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NORMAL"/>
    <RadioButton
        android:id="@+id/HighC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HIGH"/>
</RadioGroup>

<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text=" Na"
    android:textStyle="bold"
    android:textColor="#3c3e3d"
    android:gravity="left"/>

<EditText
    android:id="@+id/Na"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:hint="Na"
    android:inputType="numberDecimal"
    android:layout_marginBottom="20dp"/>

<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="K"
    android:textStyle="bold"
    android:textColor="#3c3e3d"
    android:gravity="left"/>

<EditText
    android:id="@+id/K"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:hint="K"
    android:inputType="numberDecimal"
    android:layout_marginBottom="20dp"/>


<Button
    android:id="@+id/calculate"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Soumettre"
    android:gravity="center"/>
<Button
    android:id="@+id/raz"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Effacer"
    android:gravity="center"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Le médicament prévu est : "/>
<TextView
    android:id="@+id/result"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:textSize="32dp"
    android:text=" "/>

</LinearLayout>
